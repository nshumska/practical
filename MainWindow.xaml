<Window x:Class="RandomColorButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Кнопка випадкового кольору" Height="200" Width="300">

    <!-- Основна сітка для розміщення елементів -->
    <Grid>
        <!-- Кнопка, яка змінює свій колір при натисканні -->
        <Button x:Name="btnChangeColor" Content="Click!" Width="150" Height="50"
                HorizontalAlignment="Center" VerticalAlignment="Center"
                Click="OnButtonClick"/>
    </Grid>
</Window>  